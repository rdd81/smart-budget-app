# Development Dockerfile for Angular with hot-reload
FROM node:20-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose Angular dev server port
EXPOSE 4200

# Start development server with hot-reload
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--poll", "2000"]
